rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Is the user logged in?
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: Is the user reading their own data?
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper: Is the user an admin?
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Companies Collection
    match /companies/{companyId} {
      // Anyone logged in can create a company (to start)
      allow create: if isSignedIn();
      // Only the owner can update settings
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      // Employees needs to read settings (work hours, location)
      allow read: if isSignedIn();
    }

    // Profiles Collection
    match /users/{userId} {
      // Users can read profiles (needed for dashboard listing)
      allow read: if isSignedIn();
      // Only admins can manipulate users. 
      // Also allow user to update themselves (e.g. linking companyId during setup)
      allow write: if isAdmin() || isOwner(userId);
    }
    
    // Punches Collection
    match /punches/{punchId} {
      // Employees can read their own punches. Admins can read all.
      // Security Refinement: Admins should ideally only read punches from their company, 
      // but enforcing that in rules requires fetching user->company->punch relation which is expensive.
      // For now, relying on App Logic filtering. Authorization is handled.
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      
      allow create: if isSignedIn();
      
      allow update, delete: if isAdmin();
    }
    
    // Justifications Collection
    match /justifications/{justId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Settings (Legacy, for migration)
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
