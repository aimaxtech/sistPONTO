rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Identifica se o usuário está autenticado
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Verifica se o usuário é o dono do próprio documento
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Verifica se o usuário tem cargo de administrador
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Pega os dados do usuário atual para validar a empresa (Multi-tenancy)
    function currentUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Empresas
    match /companies/{companyId} {
      // Criação permitida para novos admins no setup
      allow create: if isSignedIn();
      // Leitura permitida apenas para quem pertence à empresa ou ao dono
      allow read: if isSignedIn() && (currentUserData().companyId == companyId || resource.data.ownerId == request.auth.uid);
      // Alteração apenas pelo dono
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Perfis de Usuário
    match /users/{userId} {
      // Usuário pode ler o próprio perfil. Admin pode ler todos da MESMA empresa.
      allow read: if isSignedIn() && (isOwner(userId) || (isAdmin() && currentUserData().companyId == resource.data.companyId));
      // Admin pode criar/editar funcionários da sua empresa. Usuário pode editar a si mesmo (ex: trocar senha).
      allow write: if isOwner(userId) || (isAdmin() && (request.resource.data.companyId == currentUserData().companyId || resource.data.companyId == currentUserData().companyId));
    }
    
    // Auditoria e Registros de Ponto (Logs)
    match /logs/{logId} {
      // Leitura: Próprio funcionário OU Admin da mesma empresa
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || (isAdmin() && resource.data.companyId == currentUserData().companyId));
      
      // Criação: Validar se o usuário está criando para SI MESMO
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Admin pode gerenciar logs da sua empresa (para correções e abonos)
      allow update, delete: if isAdmin() && resource.data.companyId == currentUserData().companyId;
    }
    
    // Coleção Legada (Punches) - Mantida apenas para compatibilidade de leitura antiga
    match /punches/{punchId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || (isAdmin() && resource.data.companyId == currentUserData().companyId));
      allow write: if isAdmin();
    }
    
    // Configurações Legadas / Globais
    match /settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
